# Maintainer: Sean Enck <sean@ttypty.com>
pkgname=cusp-conf
pkgver=0.3
pkgrel=5
pkgdesc="cusp configuration templates and scripts"
url="https://github.com/seanenck/cusplinux/tree/master/caports/main/cusp-conf"
arch="noarch"
license="GPL-3.0-or-later"
options="!check"
source="
world
genapkovl.sh
"

package() {
  mkdir -p "$pkgdir"/usr/bin "$pkgdir"/usr/share/"$pkgname"/
  install -Dm644 "world" "$pkgdir/usr/share/$pkgname/world"
  install -Dm755 "genapkovl.sh" "$pkgdir/usr/bin/setup-cusp-apkovl"
}

